{
    "$schema": "/etc/xdg/swaync/configSchema.json",

    "positionX": "right",

    "control-center-positionX": "right", 

    "timeout": 3,
    "timeout-low": 2,

    "scripts": {
        "screenshots": {
            "category": "^screenshot$", 
            "exec": "eog ~/.cache/hyprcap/capture.png",
            "run-on": "action"
        }
    },

    "widgets": [
    "dnd",
    "inhibitors",
    "volume",
    "backlight",
    "mpris",
    "title",
    "notifications"
    ],
    "widget-config": {
        "inhibitors": {
          "button-text": "Clear All",
          "clear-all-button": true
        },
        "title": {
          "clear-all-button": true,
          "button-text": "Clear All"
        },
        "mpris": {
          "image-size": 128,
          "image-radius": 8
        },
        "volume": {
          "label": " ",
          "show-per-app": true,
          "expand-per-app": false,
          "expand-button-label": "",
          "collapse-button-label": ""
        },
        "backlight": {
          "label": " ",
          "device": "amdgpu_bl1"
        }
    }
}
